<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <HBox alignment="CENTER" spacing="10.0">
            <Label text="Username"/>
            <TextField maxWidth="200.0" promptText="Insert username here..." fx:id="usernameTextField"/>
            <Button fx:id="usernameButton" disable="true" mnemonicParsing="false" text="Confirm"/>
        </HBox>
        <Label text="Select the lobby you want to join" styleClass="midTitle">
            <padding>
                <Insets top="30.0"/>
            </padding>
        </Label>
        <ListView fx:id="lobbiesListView" maxWidth="200.0" disable="true"/>
        <HBox alignment="CENTER" spacing="10.0">
            <Button fx:id="createLobbyButton" disable="true" mnemonicParsing="false" text="Create lobby"/>
            <Button fx:id="joinLobbyButton" disable="true" mnemonicParsing="false" text="Join"/>
        </HBox>
    </VBox>
</AnchorPane>
